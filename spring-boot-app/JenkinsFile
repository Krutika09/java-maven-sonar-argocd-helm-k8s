pipeline {
    agent any

    environment {
        APP_DIR = "spring-boot-app"
        IMAGE_NAME = "springboot-app"
        IMAGE_TAG = "v1"
        SONARQUBE_SERVER = "MySonarQube" // Defined in Jenkins > Configure System
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
                echo "Checked out code from SCM."
            }
        }

        stage('Clean & Build Project') {
            steps {
                dir("${APP_DIR}") {
                    echo "Building project using Maven..."
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Static Code Analysis - SonarQube') {
            steps {
                dir("${APP_DIR}") {
                    withSonarQubeEnv("${SONARQUBE_SERVER}") {
                        echo "Running SonarQube analysis..."
                        sh 'mvn sonar:sonar'
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir("${APP_DIR}") {
                    echo "Building Docker image..."
                    sh 'docker build -t $IMAGE_NAME:$IMAGE_TAG .'
                }
            }
        }

        stage('Post Build Info') {
            steps {
                echo "Docker image $IMAGE_NAME:$IMAGE_TAG built successfully. No Docker push was performed."
            }
        }
    }
}
